<html lang="en">
<%- include('../partials/_head', { bot, user, path, title: 'Settings'}) %>

<body>
    <div class="container-scroller">
        <%- include('../partials/_navbar') %>
        <div class="container-fluid page-body-wrapper">
            <%- include('../partials/_sidebar') %>
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="page-header">
                        <h3 class="page-title">Settings for <%= guild.name %></h3>
                    </div>
                    <div class="row">
                        <div class="col-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Prefix</h4>
                                    <form class="form-inline" method="POST">
                                        <div class="form-group row">
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control mb-2 mr-sm-2" name="prefix"
                                                    placeholder="Prefix" value="<%= settings.prefix %>">
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary mb-2">Save</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Roles</h4>
                                    <p class="card-description">Role Names are Case-Sensitive</p>
                                    <form class="forms-sample" method="POST">
                                        <% for (let i = 1; i <= Object.keys(settings.roles).length - 1; i++) { %>
                                        <div class="form-group row">
                                            <label for="role<%= i %>"
                                                class="col-sm-3 col-form-label"><%= capL(Object.keys(settings.roles)[i]) %>
                                                Role</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" name="role<%= i %>"
                                                    placeholder="Role Name"
                                                    value="<%= Object.values(settings.roles)[i] %>">
                                            </div>
                                        </div>
                                        <% } %>
                                        <button type="submit" class="btn btn-primary mb-2">Save</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Channels</h4>
                                    <p class="card-description">Channel Names are Case-Sensitive</p>
                                    <form class="forms-sample" method="POST">
                                        <% for (let j = 1; j <= Object.keys(settings.channels).length - 1; j++) { %>
                                        <div class="form-group row">
                                            <label for="channel<%= j %>"
                                                class="col-sm-3 col-form-label"><%= capL(Object.keys(settings.channels)[j]) %>
                                                Channel</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" name="channel<%= j %>"
                                                    placeholder="Channel Name"
                                                    value="<%= Object.values(settings.channels)[j] %>">
                                            </div>
                                        </div>
                                        <% } %>
                                        <button type="submit" class="btn btn-primary mb-2">Save</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>

</html>